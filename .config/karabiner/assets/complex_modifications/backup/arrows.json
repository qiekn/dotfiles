{
  "title":"arrows",
  "rules":[
    {
      "description":"Switch Desktops & all / focus",
      "manipulators":[
        {
          "from":{
            "key_code":"left_arrow"
          },
          "to":[
            {
              "key_code":"left_arrow",
              "modifiers":"left_control"
            }
          ],
          "type":"basic"
        },
        {
          "from":{
            "key_code":"right_arrow"
          },
          "to":[
            {
              "key_code":"right_arrow",
              "modifiers":"left_control"
            }
          ],
          "type":"basic"
        },
        {
          "from":{
            "key_code":"up_arrow"
          },
          "to":[
            {
              "key_code":"up_arrow",
              "modifiers":"left_control"
            }
          ],
          "type":"basic"
        },
        {
          "from":{
            "key_code":"down_arrow"
          },
          "to":[
            {
              "key_code":"down_arrow",
              "modifiers":"left_control"
            }
          ],
          "type":"basic"
        }
      ]
    }
  ]
}
